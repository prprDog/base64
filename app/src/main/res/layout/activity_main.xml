<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:context="com.ca.myca.MainActivity">

    <EditText
            android:id="@+id/et_encoder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入加密或解密内容"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_encoder"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            tools:text="1111111111111111111111111111111
            111111111111111111111111111111111111
            111111111111111111111111111111111111111
            11111111111111111111111111111111111111111
            1111111111111111111111111111111111111111
            111111111111111111111111111111111111111
            "
            android:layout_marginStart="10dp"/>

    <Button
            android:id="@+id/bt_encoder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="加密"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_decoder"/>

    <Button
            android:id="@+id/bt_decoder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="解密"
            app:layout_constraintStart_toEndOf="@+id/bt_encoder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bt_encoder"
            app:layout_constraintBottom_toBottomOf="@id/bt_encoder"/>

    <EditText
            android:id="@+id/et_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="结果"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@+id/bt_encoder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1111111111111111111111111111111
            111111111111111111111111111111111111
            111111111111111111111111111111111111111
            11111111111111111111111111111111111111111
            1111111111111111111111111111111111111111
            111111111111111111111111111111111111111
            22222"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>